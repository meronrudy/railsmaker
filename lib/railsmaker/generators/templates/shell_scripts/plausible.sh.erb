#!/bin/bash
set -e

if ! command -v docker &> /dev/null; then
    echo "Error: Docker is not installed. Please install Docker first."
    echo "Visit https://docs.docker.com/get-docker/ for installation instructions."
    exit 1
fi

if ! command -v docker compose &> /dev/null; then
    echo "Error: Docker Compose is not installed. Please install Docker Compose first."
    echo "Visit https://docs.docker.com/compose/install/ for installation instructions."
    exit 1
fi

if ! command -v git &> /dev/null; then
    echo "Error: Git is not installed. Please install Git first."
    echo "Visit https://git-scm.com/downloads for installation instructions."
    exit 1
fi

echo "üìù Cloning Plausible repository..."
git clone -b v2.1.4 --single-branch https://github.com/plausible/community-edition plausible-ce
cd plausible-ce

echo "‚öôÔ∏è  Configuring environment..."
touch .env
echo "BASE_URL=https://<%= analytics_host %>" >> .env
echo "SECRET_KEY_BASE=$(openssl rand -base64 48)" >> .env
echo "HTTP_PORT=80" >> .env
echo "HTTPS_PORT=443" >> .env

echo "üîß Creating docker-compose override..."
cat > compose.override.yml << 'EOF'
services:
  plausible:
    ports:
      - 80:80
      - 443:443
EOF

echo "üöÄ Starting Plausible services... (it may take a while)"
docker compose up -d --quiet-pull

echo "‚ú® Verifying services..."
if docker compose ps --status running | grep -q "plausible"; then
    echo "‚úÖ Plausible Analytics is running successfully!"
else
    echo "‚ùå Error: Plausible Analytics failed to start. Please check the logs with 'docker compose logs'"
    exit 1
fi