#!/bin/bash
set -e

if ! command -v docker &> /dev/null; then
    echo "Error: Docker is not installed. Please install Docker first."
    echo "Visit https://docs.docker.com/get-docker/ for installation instructions."
    exit 1
fi

if ! command -v docker compose &> /dev/null; then
    echo "Error: Docker Compose is not installed. Please install Docker Compose first."
    echo "Visit https://docs.docker.com/compose/install/ for installation instructions."
    exit 1
fi

# Source port checking functions
. /tmp/<%= @port_check_filename %>

# Check required ports
check_required_ports "80 443 5000"

echo "üìù Creating Docker Registry installation directory..."
mkdir -p ~/docker-registry/{auth,data,caddy_data,caddy_config}
cd ~/docker-registry

echo "‚öôÔ∏è  Creating authentication credentials..."
docker run --rm httpd:2.4-alpine htpasswd -Bbn "<%= registry_username %>" "<%= registry_password %>" > auth/htpasswd

echo "üîß Creating docker-compose configuration..."
cat > docker-compose.yml << 'EOF'
version: '3'

services:
  registry:
    image: registry:2
    restart: always
    ports:
      - "5000:5000"
    environment:
      REGISTRY_STORAGE_FILESYSTEM_ROOTDIRECTORY: /var/lib/registry
      REGISTRY_AUTH: htpasswd
      REGISTRY_AUTH_HTPASSWD_PATH: /auth/htpasswd
      REGISTRY_AUTH_HTPASSWD_REALM: "Registry Realm"
    volumes:
      - ./data:/var/lib/registry
      - ./auth:/auth

  caddy:
    image: caddy:2
    restart: always
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./Caddyfile:/etc/caddy/Caddyfile
      - ./caddy_data:/data
      - ./caddy_config:/config
EOF

echo "üìÑ Creating Caddy configuration..."
cat > Caddyfile << EOF
<%= registry_host %> {
  reverse_proxy registry:5000
}
EOF

echo "üöÄ Starting Docker Registry services..."
docker compose up -d --quiet-pull

echo "‚ú® Verifying services..."
if docker compose ps --status running | grep -q "registry"; then
    echo "‚úÖ Docker Registry is running successfully!"
    echo
    echo "‚û°Ô∏è IMPORTANT: Configure DNS:"
    echo "   1. Create an A record for <%= registry_host %> pointing to this server"
    echo
    echo "‚û°Ô∏è Login to your registry with:"
    echo "   docker login <%= registry_host %>"
    echo "   Username: <%= registry_username %>"
    echo "   Password: <%= registry_password %>"
else
    echo "‚ùå Error: Docker Registry failed to start. Please check the logs with 'docker compose logs'"
    exit 1
fi 